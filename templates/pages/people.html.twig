{% extends "base.html.twig" %}



{% block title %}{{ c[61]|raw }} | {% endblock %}



{% block body %}

    {% include "nav.html.twig" %}

    <div class="standard-content">
        <div class="ui text container">
            <h1 class="ui horizontal divider huge header">{{ c[61]|raw }}</h1>

            <div class="people-grid">
                {% for person in people %}
                    <div class="person">
                        <div class="img" style="background-image: URL('/assets/uploads/{{ person.image }}');"></div>
                        <h3 class="ui header name">{{ person.name }}</h3>
                        {# TODO: Add language switcher for post and description #}
                        {% if lang == 'en' and person.posten is not empty %}
                            <div class="sub header">{{ person.posten }}</div>
                            <div class="descr">{{ person.descriptionen|raw }}</div>
                        {% elseif lang == 'ru' and person.postru is not empty %}
                            <div class="sub header">{{ person.postru }}</div>
                            <div class="descr">{{ person.descriptionru|raw }}</div>
                        {% else %}
                            <div class="sub header">{{ person.post }}</div>
                            <div class="descr">{{ person.description|raw }}</div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>


{% endblock %}



