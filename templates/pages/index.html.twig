{% extends "base.html.twig" %}



{% block title %}{% endblock %}

{% block head %}
    <meta property="og:image" content="http://www.protests.eu/assets/uploads/default.png"/>
    <meta property="og:image:url" content="http://www.protests.eu/assets/uploads/default.png"/>
    
    <meta property="og:title" content='Jaunatnes organizācija "Protests"' />
    <meta property="og:url" content="{{ fullURL }}" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@ProtestsYouth">
    <meta name="twitter:creator" content="@ProtestsYouth">
    <meta name="twitter:title" content='Jaunatnes organizācija "Protests"'>
    <meta name="twitter:description" content="{{ c[14]|striptags }}">
    <meta name="twitter:text:description" content="{{ c[14]|striptags }}">
    <meta name="twitter:image" content="http://www.protests.eu/assets/uploads/default.png">

    <meta name="author" content="Protests">
    <meta name="keywords" content="jaunatne, jaunatnes organizācija, Protests">
    <meta name="description" content="{{ c[14]|striptags }}">
{% endblock %}

{% block body %}

    {% include "nav.html.twig" %}

    <div class="welcome-wrapper">
        <div class="welcome-view">
            <div class="content">
                <div class="pusher"></div>
                <h1>{{ c[7]|raw }}</h1>
                <div class="subheader">{{ c[8]|raw }}</div>
                <a href="{{ path('join') }}" class="button welcome">{{ c[9]|raw }}</a>
                <a href="{{ path('about') }}" class="button welcome">{{ c[10]|raw }}</a>
            </div>
        </div>
        <div class="subscribe-box">
            <!-- Begin Mailchimp Signup Form -->
            <div id="mc_embed_signup">
                <form action="https://protests.us10.list-manage.com/subscribe/post?u=9be7b89b86d3aa4fd00cabeeb&amp;id=ac2c6337c3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                        <h2>{{ c[65]|raw }}</h2>
                        <div class="mc-field-group">
                            <label for="mce-EMAIL">{{ c[66]|raw }} </label>
                            <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                        </div>
                        <div id="mce-responses" class="clear">
                            <div class="response" id="mce-error-response" style="display:none"></div>
                            <div class="response" id="mce-success-response" style="display:none"></div>
                        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9be7b89b86d3aa4fd00cabeeb_ac2c6337c3" tabindex="-1" value=""></div>
                        <div class="clear"><input type="submit" value="{{ c[67]|striptags }}" name="subscribe" id="mc-embedded-subscribe" class="button white"></div>
                        <div class="description">{{ c[68]|raw }}</div>
                    </div>
                </form>
            </div>

            <!--End mc_embed_signup-->
        </div>
    </div>

    <div class="white stripe">
        <div class="ui text container">

            <h1 class="ui horizontal divider header">{{ c[11]|raw }}</h1>
            <div class="ui hidden divider"></div>
            
            <div class="news-grid">
                {% set i = 0 %}
                {% set break = false %}
                {% for article in articles if not break %}
                    <div class="article">
                        <a href="{{ path('article', {article_url: article.link}) }}" class="image">
                            <img src="/assets/uploads/{{ article.image }}">
                        </a>
                        <a href="{{ path('article', {article_url: article.link}) }}" class="header"><h2>{{ article.title }}</h2></a>
                        <span class="time">{{ articletime[i] }}</span> · 
                        <a href="{{ path('author', {author: article.author}) }}" class="author">{{ articleauthor[i] }}</a>
                    </div>
                    {% set i = i + 1 %}
                    {% if i is same as(4) %}{% set break = true %}{% endif %}
                {% endfor %}
            </div>

            <a href="{{ path('articles') }}" class="button dark wide center">{{ c[12]|raw }}</a>
        </div>
    </div>

    <div class="violet stripe">
        <div class="ui text container">
    
            <h1 class="ui horizontal divider header">{{ c[13]|raw }}</h1>
            <div class="ui hidden divider"></div>
            <div class="landing-textblock">
                {{ c[14]|raw }}
            </div>

            <div class="centered-content-container">
                <a href="{{ path('about') }}" class="button white">{{ c[15]|raw }}</a>
            </div>
        </div>
    </div>
    
    <div class="white stripe">
        <div class="ui text container">
            <p class="quotation"><i class="fas fa-quote-left"></i> {{ c[72]|raw }}</p>
            <p class="quotation-ref">{{ c[73]|raw }}</p>
        </div>

    </div>

    <div class="violet stripe">
        <div class="ui text container">

            <h1 class="ui horizontal divider header">{{ c[17]|raw }}</h1>
            <div class="ui hidden divider"></div>
            <div class="landing-textblock">
                {{ c[18]|raw }}
            </div>
            
            <div class="centered-content-container">
                <a href="{{ path('join') }}" class="button white">{{ c[19]|raw }}</a>
            </div>
            
        </div>
    </div>

    <div class="white stripe">
        <div class="ui text container">
            <h1 class="ui horizontal divider header">{{ c[16]|raw }}</h1>
            <div class="ui hidden divider"></div>
            <div class="socmedia-block">
                <a href="https://www.facebook.com/protestsjaunatne" target="_blank" class="ui segment fb">
                    <i class="fab fa-facebook-f"></i>
                </a> 
                <a href="https://twitter.com/ProtestsYouth" target="_blank" class="ui segment tw">
                    <i class="fab fa-twitter"></i>
                </a> 
                <a href="https://www.instagram.com/protestsjaunatne/" target="_blank" class="ui segment ig">
                    <i class="fab fa-instagram"></i>
                </a> 
            </div>
        </div>
    </div>

    <div class="fyeg stripe">
        <div class="ui text container">

            <img src="/assets/images/FYEG-logo.png" alt="Logo of Federation of Young European Greens"/>
            <div class="description">
                {% if lang is same as('lv') %}
                    Kopš 2020. gada 29. augusta "Protests" ir <a href="https://fyeg.org/" target="_blank">Eiropas jauno zaļo federācijas (FYEG)</a> dalīborganizācija.
                {% endif %}
                {% if lang is same as('en') %}
                    Since August 29, 2020, "Protests" is a member organization of the <a href="https://fyeg.org/" target="_blank">Federation of Young European Greens</a>.
                {% endif %}
                {% if lang is same as('ru') %}
                    С 29 августа 2020 "Protests" членская организация <a href="https://fyeg.org/" target="_blank">Федерации молодых европейских зеленых (FYEG)</a>.
                {% endif %}
            </div>
            
        </div>
    </div>
            <!---->

{% endblock %}



